{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "typeRoots": ["./src/declarations/third-party.d.ts"],
    "composite": true,
    "declaration": true,
    "paths": {
      "@widgets/*": ["./src/components/widgets/*/component.ts"],
      "@routes/*": ["./src/components/routes/*/component.ts"],
      "@services/*": ["./src/background-services/*.service.ts"],
      "@declarations/*": ["./src/declarations/*"],
      "@utilities/*": ["./src/utilities/*"],
      "@application": ["./src/application.ts"],
      "@styles/variables": ["./src/styles/variables.ts"]
    }
  }
}
