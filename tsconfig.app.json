{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["./src/declarations/third-party.d.ts"],
    "composite": false,
    "declaration": true,
    "paths": {
      "@widgets/*": ["./src/components/widgets/*/component.ts"],
      "@routes/*": ["./src/components/routes/*/component.ts"],
      "@declarations/*": ["./src/declarations/*"],
      "@utilities/*": ["./src/utilities/*"]
    }
  }
}
