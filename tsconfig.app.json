{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "typeRoots": ["./src/declarations/third-party.d.ts"],
    "composite": true,
    "declaration": true,
    "paths": {
      "@widgets/*": ["./src/application/components/widgets/*/component.ts"],
      "@routes/*": ["./src/application/components/routes/*/component.ts"],
      "@services/*": ["./src/application/background-services/*.service.ts"],
      "@declarations/*": ["./src/application/declarations/*"],
      "@utilities/*": ["./src/application/utilities/*"],
      "@framework/*": ["./src/framework/*"],
      "@styles/variables": ["./src/application/styles/variables.ts"]
    }
  }
}
